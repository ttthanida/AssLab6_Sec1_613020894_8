<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".TwoFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:src="@drawable/panda2"
        android:layout_marginTop="40sp"
        android:layout_marginLeft="80dp"
        android:id="@+id/pandaaImg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PANDA 2"
        android:textSize="40sp"
        android:layout_below="@+id/pandaaImg"
        android:layout_centerHorizontal="true"
        android:id="@+id/pandaaName"
        />

    <Button
        android:id="@+id/pandabt"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pandaaImg"
        android:layout_marginTop="78dp"
        android:layout_marginLeft="50dp"
        android:text="Go back my fragment"
        android:textSize="20sp" />


</RelativeLayout>